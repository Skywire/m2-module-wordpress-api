<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <skywire_wordpress_api>
            <api>
                <path>/wp-json/wp/v2</path>
                <sub_dir>blog</sub_dir>
                <nav_name>Blog</nav_name>
                <cache_ttl>86400</cache_ttl>
            </api>
            <pagination>
                <posts_per_page>10</posts_per_page>
            </pagination>
            <indexing>
                <cron_schedule>0 0 * * *</cron_schedule>
                <page_size>100</page_size>
            </indexing>
            <seo>
                <enable_canonical>1</enable_canonical>
            </seo>
        </skywire_wordpress_api>
    </default>
</config>